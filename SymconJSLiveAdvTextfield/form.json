                        {
                            "type": "HorizontalSlider", "name": "style_highlightColor5_Alpha", "caption": "Color Alpha", "minimum": 0, "maximum": 1, "stepSize": 0.05
                        }
                    ]
                }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Fonts",
            "items": [
                { "type": "NumberSpinner", "name": "style_fontSize", "caption": "Font Size", "suffix": "px" },
                { "type": "SelectColor", "name": "style_fontColor", "caption": "Font Color" }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Border",
            "items": [
                { "type": "NumberSpinner", "name": "style_borderRadius", "caption": "Border Radius", "suffix": "px" },
                { "type": "NumberSpinner", "name": "style_borderWidth", "caption": "Border Width", "suffix": "px" },
                { "type": "SelectColor", "name": "style_borderColor", "caption": "Border Color" }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Expert",
            "items": [
                { "type": "CheckBox", "name": "Debug", "caption": "Debug"},
                { "type": "SelectScript", "name": "TemplateScriptID", "caption": "Template Script"},
                { "type": "NumberSpinner", "name": "DataUpdateRate", "caption": "Data Update Rate", "minimum": 0, "suffix": "ms", "digits": 0 }
            ]
        }
    ],
    "actions":
    [
        {
            "type": "RowLayout",
            "items": [
                { "type": "Button", "label": "Get Link (Local)", "onClick": " echo SymconJSLiveAdvTextfield_GetLink($id, True);" },
                { "type": "Button", "label": "Get Link (Remote)", "onClick": " echo SymconJSLiveAdvTextfield_GetLink($id, False);" }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Configuration",
            "items": [
                { "type": "Label", "caption": "Load from other Modul"},
                {
                    "type": "RowLayout",
                    "items": [
                        {"type": "SelectObject", "name": "ObjectID", "caption": "Modul"},
                        { "type": "Button", "label": "Load", "onClick": " echo SymconJSLiveAdvTextfield_LoadOtherConfiguration($id, $ObjectID);"}
                    ]
                },
                { "type": "Label", "caption": "Load from File"},
                {
                    "type": "RowLayout",
                    "items": [
                        {"type": "SelectFile", "name": "Config_fileData", "caption": "File"},
                        { "type": "Button", "label": "Load", "onClick": " echo SymconJSLiveAdvTextfield_LoadConfigurationFile($id, $Config_fileData);"}
                    ]
                },
                { "type": "Button", "label": "Export", "onClick": " echo SymconJSLiveAdvTextfield_GetConfigurationLink($id);" }
            ]
        }
    ],
    "status":
    [
        { "code": 102, "icon": "active", "caption": "Status OK!" }
    ]
