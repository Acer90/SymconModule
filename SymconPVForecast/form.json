{
	"elements":
	[
		{ "type": "Label",       "caption": "Orginal Modul bei stele99: https://github.com/stele99/pvForecast" },
		{ "type": "Label",       "caption": "" },

		{ "name": "location",    "type": "SelectLocation", "caption": "Standort der PV Anlage" },

		{ "type": "Label",       "caption": "DWD-Stationsfinder: https://wettwarn.de/mosmix/mosmix.html" },
		{ "name": "dwd_station", "type": "ValidationTextBox",  "caption": "DWD-Wetterstations ID"},

		{ "name": "kwh",            "type": "CheckBox",       "caption": "kWh statt Wh" },
		{ "name": "toArchiv",            "type": "CheckBox",       "caption": "add to Archiv" },
		{ "name": "forecastVariables", "type": "Select",  "caption": "Anzahl Variablen für Ausgabe Forecast", "value": 3,
			"options": [
				{ "caption": "Keine", "value": 0 },
				{ "caption": "1 Tag im Voraus", "value": 1 },
				{ "caption": "2 Tage im Voraus", "value": 2 },
				{ "caption": "3 Tage im Voraus", "value": 3 },
				{ "caption": "4 Tage im Voraus", "value": 4 },
				{ "caption": "5 Tage im Voraus", "value": 5 },
				{ "caption": "6 Tage im Voraus", "value": 6 },
				{ "caption": "7 Tage im Voraus", "value": 7 },
				{ "caption": "8 Tage im Voraus", "value": 8 }
			]
		},

		{
			"type": "List",
			"name": "solarData",
			"caption": "solarData",
			"rowCount": 5,
			"add": true,
			"delete": true,
			"edit": true,
			"changeOrder": true,
			"columns": [
				{
					"caption": "Activ",
					"name": "activ",
					"width": "200px",
					"add": true,
					"edit": {"type": "CheckBox"}
				},
				{
					"caption": "Name",
					"name": "Name",
					"width": "auto",
					"add": "",
					"edit": {"type": "ValidationTextBox"}
				},
				{
					"caption": "PV Peak",
					"name": "kwp",
					"width": "200px",
					"add": 1000,
					"edit": {"type": "NumberSpinner" , "digits" : "0", "suffix" : "Watt"}
				},
				{
					"caption": "Azimuth",
					"name": "azimuth",
					"width": "100px",
					"add": 0,
					"edit": {"type": "NumberSpinner", "digits" : "0", "maximum": 180, "minimum": -180, "suffix" : "Grad"}
				},
				{
					"caption": "Tilt",
					"name": "tilt",
					"width": "100px",
					"add": 30,
					"edit": {"type": "NumberSpinner", "digits" : "0", "maximum": 90, "minimum": 0, "suffix" : "Grad"}
				},
				{
					"caption": "Aufständerung",
					"name": "type",
					"width": "200px",
					"add": 0,
					"edit": {"type": "Select", "value": 0,
						"options": [
							{ "caption": "Standard alle gleich", "value": 0 },
							{ "caption": "Dachständerung /\\", "value": 1 }
						]}
				},
				{
					"caption": "Effizienz",
					"name": "efficiency",
					"width": "100px",
					"visible": false,
					"add": 95,
					"edit": {"type": "NumberSpinner", "digits" : "0", "maximum": 100, "minimum": 0, "suffix" : "%"}
				},
				{
					"caption": "Auswirkung Bewölkung",
					"name": "cloudeffect",
					"width": "200px",
					"visible": false,
					"add": 65,
					"edit": {"type": "NumberSpinner", "digits" : "0", "maximum": 100, "minimum": 0, "suffix" : "%"}
				},
				{
					"caption": "Temperaturskoeffizient",
					"name": "tempkoeff",
					"width": "200px",
					"visible": false,
					"add": 0.65,
					"edit": {"type": "NumberSpinner", "digits" : "2", "maximum": 1, "minimum": 0}
				},
				{
					"caption": "Horizont für Sonnen Einfallswinkel",
					"name": "horizon",
					"width": "200px",
					"visible": false,
					"add": 0,
					"edit": {"type": "NumberSpinner", "digits" : "0", "maximum": 45, "minimum": 0, "suffix" : "Grad"}
				},
				{
					"caption": "Verschattungsobjekt",
					"name": "obj",
					"width": "200px",
					"add": false,
					"edit": {"type": "CheckBox"}
				},
				{
					"caption": "Himmelsrichtung des Objektes",
					"name": "obj_direction",
					"width": "200px",
					"visible": false,
					"add": 0,
					"edit": {"type": "NumberSpinner", "digits" : "0", "maximum": 365, "minimum": 0, "suffix" : "Grad"}
				},
				{
					"caption": "Abstand des Objektes",
					"name": "obj_distance",
					"width": "200px",
					"visible": false,
					"add": 0,
					"edit": {"type": "NumberSpinner", "digits" : "0", "maximum": 100, "minimum": 0, "suffix" : "m"}
				},
				{
					"caption": "Objekthöhe",
					"name": "obj_height",
					"width": "200px",
					"visible": false,
					"add": 10,
					"edit": {"type": "NumberSpinner", "digits" : "0", "maximum": 100, "minimum": 0, "suffix" : "m"}
				},
				{
					"caption": "Abeckungsgrad PV des Objektes",
					"name": "obj_size",
					"width": "200px",
					"visible": false,
					"add": 50,
					"edit": {"type": "NumberSpinner", "digits" : "0", "maximum": 100, "minimum": 0,"suffix" : "%"}
				},
				{
					"caption": "Auswirkung der Beschattung",
					"name": "obj_effect",
					"width": "200px",
					"visible": false,
					"add": 0,
					"edit": {"type": "NumberSpinner", "digits" : "0", "maximum": 100, "minimum": 0,"suffix" : "%"}
				}
			]
		}
	],
	"actions":
	[
		{ "type": "Button", "label": "Force Update", "onClick": " pvFC_UpdateForce($id);" }
	]
}
