{
    "elements":
    [
        { "type": "SelectVariable", "name": "variable", "caption": "Variable" },
        { "type": "NumberSpinner", "name": "min", "caption": "Min" ,"digits": 2 },
        { "type": "NumberSpinner", "name": "max", "caption": "Max" ,"digits": 2 },
        { "type": "Select", "name": "template", "caption": "Template",
            "options": [
                { "caption": "CanvasGauges-Radial", "value": "CanvasGauges-Radial" },
                { "caption": "CanvasGauges-Linear", "value": "CanvasGauges-Linear" },
                { "caption":  "CanvasGauges-Linear(vertical)", "value":  "CanvasGauges-Linear(vertical)"},
                { "caption":  "CanvasGauges-Compass", "value":  "CanvasGauges-Compass"}

            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Title",
            "items": [
                { "type": "CheckBox", "name": "title_display", "caption": "Display"},
                { "type": "ValidationTextBox", "name": "title_text", "caption": "Text" },
                { "type": "NumberSpinner", "name": "title_fontSize", "caption": "FontSize" },
                { "type": "SelectColor", "name": "title_fontColor", "caption": "FontColor" }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Plate",
            "items": [
                { "type": "CheckBox", "name": "plate_display", "caption": "Display"},
                { "type": "ValidationTextBox", "name": "plate_unit", "caption": "Unit" },
                { "type": "SelectColor", "name": "plate_colorPlate", "caption": "color Plate" },
                { "type": "HorizontalSlider", "name": "plate_colorPlate_Alpha", "caption": "Color Plate Alpha", "minimum": 0, "maximum": 1, "stepSize": 0.05 },
                { "type": "SelectColor", "name": "plate_colorPlateEnd", "caption": "Color Plate End" },
                { "type": "HorizontalSlider", "name": "plate_colorPlateEnd_Alpha", "caption": "Color Plate End Alpha", "minimum": 0, "maximum": 1, "stepSize": 0.05 }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Needle",
            "items": [
                { "type": "CheckBox", "name": "needle_display", "caption": "Display"},
                { "type": "Select", "name": "needle_Type", "caption": "Template",
                    "options": [
                        { "caption": "Arrow", "value": "arrow" },
                        { "caption": "Line", "value": "line" }
                    ]
                },
                { "type": "NumberSpinner", "name": "needle_fontSize", "caption": "FontSize" },
                { "type": "NumberSpinner", "name": "needle_start", "caption": "Start", "suffix": "%" },
                { "type": "NumberSpinner", "name": "needle_end", "caption": "End", "suffix": "%" },
                { "type": "NumberSpinner", "name": "needle_width", "caption": "Width", "suffix": "px" },
                { "type": "SelectColor", "name": "needle_colorNeedle", "caption": "Color Needle" },
                { "type": "HorizontalSlider", "name": "needle_colorNeedle_Alpha", "caption": "Color Needle Alpha", "minimum": 0, "maximum": 1, "stepSize": 0.05 },
                { "type": "SelectColor", "name": "needle_colorNeedleEnd", "caption": "Color Needle End" },
                { "type": "HorizontalSlider", "name": "needle_colorNeedleEnd_Alpha", "caption": "Color Needle End Alpha", "minimum": 0, "maximum": 1, "stepSize": 0.05 }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Valuebox",
            "items": [
                { "type": "CheckBox", "name": "valuebox_display", "caption": "Display"},
                { "type": "NumberSpinner", "name": "valuebox_fontSize", "caption": "FontSize" },
                { "type": "SelectColor", "name": "valuebox_colorValueBoxBackground", "caption": "Background Color" },
                { "type": "HorizontalSlider", "name": "valuebox_colorValueBoxBackground_Alpha", "caption": "Background Color Alpha", "minimum": 0, "maximum": 1, "stepSize": 0.05 }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Progressbar",
            "items": [
                { "type": "CheckBox", "name": "progressbar_display", "caption": "Display"},
                { "type": "NumberSpinner", "name": "progressbar_barWidth", "caption": "Width", "suffix": "px" },
                { "type": "NumberSpinner", "name": "progressbar_barShadow", "caption": "Shadow", "suffix": "px" },
                { "type": "SelectColor", "name": "progressbar_colorBar", "caption": "Color" },
                { "type": "HorizontalSlider", "name": "progressbar_colorBar_Alpha", "caption": "Color Alpha", "minimum": 0, "maximum": 1, "stepSize": 0.05 },
                { "type": "SelectColor", "name": "progressbar_colorBarProgress", "caption": "Color Progress" },
                { "type": "HorizontalSlider", "name": "progressbar_colorBarProgress_Alpha", "caption": "Color Progress Alpha", "minimum": 0, "maximum": 1, "stepSize": 0.05 }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Ticks Settings",
            "items": [
                { "type": "CheckBox", "name": "ticks_strokeTicks", "caption": "Stroke Ticks"},
                { "type": "NumberSpinner", "name": "ticks_highlightsWidth", "caption": "Highlights Width" },
                { "type": "NumberSpinner", "name": "ticks_minorTicks", "caption": "Minor Ticks" },
                { "type": "SelectColor", "name": "ticks_colorMajorTick", "caption": "Color Major Tick" },
                { "type": "SelectColor", "name": "ticks_colorMinorTicks", "caption": "Color Minor Ticks" },
                { "type": "SelectColor", "name": "ticks_colorUnits", "caption": "color Units" },
                { "type": "SelectColor", "name": "ticks_colorNumbers", "caption": "color Numbers" },

                {
                    "type": "List",
                    "name": "Ticks",
                    "caption": "Ticks",
                    "rowCount": 5,
                    "add": true,
                    "delete": true,
                    "sort": {
                        "column": "Value",
                        "direction": "ascending"
                    },
                    "columns": [
                        {
                            "caption": "Value",
                            "name": "Value",
                            "width": "150px",
                            "add": 0,
                            "edit": {
                                "type": "NumberSpinner",
                                "digits": 2
                            }
                        }
                    ]
                },
                {
                    "type": "List",
                    "name": "Highlights",
                    "caption": "Highlights",
                    "rowCount": 5,
                    "add": true,
                    "delete": true,
                    "sort": {
                        "column": "From",
                        "direction": "ascending"
                    },
                    "columns": [
                        {
                            "caption": "From",
                            "name": "From",
                            "width": "150px",
                            "add": 0,
                            "edit": {
                                "type": "NumberSpinner",
                                "digits": 2
                            }
                        },
                        {
                            "caption": "To",
                            "name": "To",
                            "width": "150px",
                            "add": 0,
                            "edit": {
                                "type": "NumberSpinner",
                                "digits": 2
                            }
                        },
                        {
                            "caption": "HighlightColor",
                            "name": "HighlightColor",
                            "width": "130px",
                            "add": -1,
                            "edit": {
                                "type": "SelectColor"
                            }
                        },
                        {
                            "caption": "HighlightColor Alpha",
                            "name": "HighlightColor_Alpha",
                            "width": "180px",
                            "add": 1.0,
                            "edit": {
                                "type": "NumberSpinner",
                                "digits": 2,
                                "maximum": 1,
                                "minimum": 0
                            }
                        }
                    ]
                }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Radial Gauge Settings",
            "items": [
                { "type": "NumberSpinner", "name": "radial_startAngle", "caption": "Start Angle", "suffix": "°"},
                { "type": "NumberSpinner", "name": "radial_ticksAngle", "caption": "Ticks Angle", "suffix": "°"}
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Linear Gauge Settings",
            "items": [
                { "type": "Select", "name": "linear_tickSide", "caption": "Tick Side",
                    "options": [
                        { "caption": "Left", "value": "left" },
                        { "caption": "Right", "value": "right" },
                        { "caption": "Both", "value": "both" }
                    ]
                },
                { "type": "Select", "name": "linear_numberSide", "caption": "Number Side",
                    "options": [
                        { "caption": "Left", "value": "left" },
                        { "caption": "Right", "value": "right" },
                        { "caption": "Both", "value": "both" }
                    ]
                },
                { "type": "Select", "name": "linear_needleSide", "caption": "Needle Side",
                    "options": [
                        { "caption": "Left", "value": "left" },
                        { "caption": "Right", "value": "right" },
                        { "caption": "Both", "value": "both" }
                    ]
                }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Expert",
            "items": [
                { "type": "CheckBox", "name": "Debug", "caption": "Debug"},
                { "type": "SelectScript", "name": "TemplateScriptID", "caption": "Template Script"}
            ]
        }
    ],
    "actions":
    [
        {
            "type": "RowLayout",
            "items": [
                { "type": "Button", "label": "Get Link (Local)", "onClick": " echo SymconJSLiveGauge_GetLink($id, True);" },
                { "type": "Button", "label": "Get Link (Remote)", "onClick": " echo SymconJSLiveGauge_GetLink($id, False);" }
            ]
        },
        { "type": "Label", "caption": "Load Configuration from other Modul" },
        { "type": "SelectObject", "name": "ObjectID", "caption": "Chart/Modul" },
        { "type": "Button", "label": "Load Confiuration", "onClick": " echo SymconJSLiveGauge_LoadOtherConfiguration($id, $ObjectID);" }
    ],
    "status":
    [
        { "code": 102, "icon": "active", "caption": "Status OK!" }
    ]
}