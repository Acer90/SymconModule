                { "type": "CheckBox", "name": "axes_drawOnChartArea", "caption": "Draw On Chart Area"},
                { "type": "Select", "name": "axes_labelText", "caption": "Label",
                    "options": [
                        { "caption": "Profilname", "value": 0 },
                        { "caption": "Profilname + Suffix", "value": 1 },
                        { "caption": "Suffix", "value": 2 }
                    ]
                },
                { "type": "NumberSpinner", "name": "axes_labelfontSize", "caption": "Label Font Size" },
                { "type": "NumberSpinner", "name": "axes_tickfontSize", "caption": "Tick Font Size" },
                { "type": "NumberSpinner", "name": "axes_lineWidth", "caption": "LineWidth" },
                { "type": "SelectColor", "name": "axes_color", "caption": "Color" },
                { "type": "NumberSpinner", "name": "axes_colorAlpha", "caption": "Color Alpha", "maximum": 1, "minimum": 0, "digits": 2},
                { "type": "SelectColor", "name": "axes_fontColor", "caption": "Font Color" }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Points",
            "items": [
                { "type": "NumberSpinner", "name": "point_radius", "caption": "Point Radius" },
                { "type": "NumberSpinner", "name": "point_hoverRadius", "caption": "Point Hover-Radius"},
                { "type": "Select", "name": "points_Style", "caption": "Style",
                    "options": [
                        { "caption": "circle", "value": "circle" },
                        { "caption": "cross", "value": "cross" },
                        { "caption": "crossRot", "value": "crossRot" },
                        { "caption": "dash", "value": "dash" },
                        { "caption": "line", "value": "line" },
                        { "caption": "rect", "value": "rect" },
                        { "caption": "rectRounded", "value": "rectRounded" },
                        { "caption": "rectRot", "value": "rectRot" },
                        { "caption": "star", "value": "star" },
                        { "caption": "triangle", "value": "triangle" }
                    ]
                }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Legend",
            "items": [
                { "type": "CheckBox", "name": "legend_display", "caption": "Display"},
                { "type": "Select", "name": "legend_position", "caption": "Position",
                    "options": [
                        { "caption": "top", "value": "top" },
                        { "caption": "left", "value": "left" },
                        { "caption": "bottom", "value": "bottom" },
                        { "caption": "right", "value": "right" }
                    ]
                },
                { "type": "Select", "name": "legend_align", "caption": "Align",
                    "options": [
                        { "caption": "start", "value": "start" },
                        { "caption": "center", "value": "center" },
                        { "caption": "end", "value": "end" }
                    ]
                },
                { "type": "NumberSpinner", "name": "legend_fontSize", "caption": "FontSize" },
                { "type": "SelectColor", "name": "legend_fontColor", "caption": "FontColor" },
                { "type": "NumberSpinner", "name": "legend_boxWidth", "caption": "Box Width" }

            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Tooltips",
            "items": [
                { "type": "CheckBox", "name": "tooltips_enabled", "caption": "Enabled"},
                { "type": "Select", "name": "tooltips_position", "caption": "Position",
                    "options": [
                        { "caption": "average", "value": "average" },
                        { "caption": "nearest", "value": "nearest" }
                    ]
                },
                { "type": "Select", "name": "tooltips_mode", "caption": "Mode",
                    "options": [
                        { "caption": "index", "value": "index" },
                        { "caption": "dataset", "value": "dataset" },
                        { "caption": "point", "value": "point" }
                    ]
                },
                { "type": "NumberSpinner", "name": "tooltips_fontSize", "caption": "Font Size" },
                { "type": "SelectColor", "name": "tooltips_fontColor", "caption": "Font Color" },
                { "type": "SelectColor", "name": "tooltips_backgroundColor", "caption": "Background Color" },
                { "type": "NumberSpinner", "name": "tooltips_cornerRadius", "caption": "Corner Radius" }

            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Data",
            "items": [
                { "type": "NumberSpinner", "name": "data_highResSteps", "caption": "HighResolution Steps" },
                { "type": "CheckBox", "name": "data_loadAfterStartup", "caption": "load data after start"}
            ]
        },
        {
