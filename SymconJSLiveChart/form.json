{
    "elements":
    [
        {
            "type": "ExpansionPanel",
            "caption": "Title",
            "items": [
                { "type": "CheckBox", "name": "title_display", "caption": "Display"},
                { "type": "ValidationTextBox", "name": "title_text", "caption": "Text" },
                { "type": "Select", "name": "title_position", "caption": "Position",
                    "options": [
                        { "caption": "top", "value": "top" },
                        { "caption": "left", "value": "left" },
                        { "caption": "bottom", "value": "bottom" },
                        { "caption": "right", "value": "right" }
                    ]
                },
                { "type": "NumberSpinner", "name": "title_fontSize", "caption": "FontSize" },
                { "type": "SelectColor", "name": "title_fontColor", "caption": "FontColor" }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Axes",
            "items": [
                { "type": "CheckBox", "name": "axes_display", "caption": "Display"},
                { "type": "CheckBox", "name": "axes_showLabel", "caption": "Show Label"},
                { "type": "CheckBox", "name": "axes_drawBorder", "caption": "Draw Border"},
