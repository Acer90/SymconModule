                        "type": "ValidationTextBox"
                    }
                },
                {
                    "caption": "Profile",
                    "name": "Profile",
                    "width": "120px",
                    "add": "",
                    "edit": {
                        "type": "SelectProfile"
                    }
                },
                {
                    "caption": "Side",
                    "name": "Side",
                    "width": "50px",
                    "add": "left",
                    "edit": {
                        "type": "Select",
                        "options": [
                            {
                                "caption": "Left",
                                "value": "left"
                            },
                            {
                                "caption": "Right",
                                "value": "right"
                            }
                        ]
                    }
                },
                {
                    "caption": "Offset",
                    "name": "Offset",
                    "width": "50px",
                    "add": 0,
                    "edit": {
                        "type": "NumberSpinner",
                        "digits": 0,
                        "minimum": 0
                    }
                },

                {
                    "caption": "BackgroundColor",
                    "name": "BackgroundColor",
                    "width": "130px",
                    "add": 0,
                    "edit": {
                        "type": "SelectColor"
                    }
                },
                {
                    "caption": "BorderColor",
                    "name": "BorderColor",
                    "width": "120px",
                    "add": 0,
                    "edit": {
                        "type": "SelectColor"
                    }
                },
                {
                    "caption": "BackgroundColor Alpha",
                    "name": "BackgroundColor_Alpha",
                    "width": "50px",
                    "add": 0.5,
                    "edit": {
                        "type": "NumberSpinner",
                        "digits": 2,
                        "maximum": 1,
                        "minimum": 0
                    }
                },
                {
                    "caption": "BorderColor Alpha",
                    "name": "BorderColor_Alpha",
                    "width": "50px",
                    "add": 1.0,
                    "edit": {
                        "type": "NumberSpinner",
                        "digits": 2,
                        "maximum": 1,
                        "minimum": 0
                    }
                },
                {
                    "caption": "Border Width",
                    "name": "BorderWidth",
                    "width": "120px",
