            "items": [
                { "type": "CheckBox", "name": "Debug", "caption": "Debug"},
                { "type": "SelectScript", "name": "TemplateScriptID", "caption": "Template Script"}
            ]
        }
    ],
    "actions":
    [
        {
            "type": "RowLayout",
            "items": [
                { "type": "Button", "label": "Get Link (Local)", "onClick": " echo SymconJSLiveChart_GetLink($id, True);" },
                { "type": "Button", "label": "Get Link (Remote)", "onClick": " echo SymconJSLiveChart_GetLink($id, False);" }
            ]
        },
        {
            "type": "ExpansionPanel",
            "caption": "Configuration",
            "items": [
                { "type": "Label", "caption": "Load from other Modul or Chart"},
                {
                    "type": "RowLayout",
                    "items": [
                        {"type": "SelectObject", "name": "ObjectID", "caption": "Modul"},
                        { "type": "Button", "label": "Load", "onClick": " echo SymconJSLiveChart_LoadOtherConfiguration($id, $ObjectID);"}
                    ]
                },
                { "type": "Label", "caption": "Load from File"},
                {
                    "type": "RowLayout",
                    "items": [
                        {"type": "SelectFile", "name": "Config_fileData", "caption": "File"},
                        { "type": "Button", "label": "Load", "onClick": " echo SymconJSLiveChart_LoadConfigurationFile($id, $Config_fileData);"}
                    ]
                },
                { "type": "Button", "label": "Export", "onClick": " echo SymconJSLiveChart_GetConfigurationLink($id);" }
            ]
        }
    ],
    "status":
    [
        { "code": 102, "icon": "active", "caption": "Status OK!" }
    ]
}