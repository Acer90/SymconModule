                },
                {
                    "caption": "Type",
                    "name": "Type",
                    "width": "100px",
                    "add": "line",
                    "edit": {
                        "type": "Select",
                        "options": [
                            {
                                "caption": "Line",
                                "value": "line"
                            },
                            {
                                "caption": "Bar",
                                "value": "bar"
                            }
                        ]
                    }
                },
                {
                    "caption": "Variable",
                    "name": "Variable",
                    "width": "100px",
                    "add": 0,
                    "edit": {
                        "type": "SelectVariable"
                    }
                },
                {
                    "caption": "Title",
                    "name": "Title",
                    "width": "auto",
